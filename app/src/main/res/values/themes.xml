<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ElectronicJournal" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/accent_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent_variant</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
<!--        <item name="android:drawableTint">@color/middle_gray</item>-->
        <item name="android:textColorHint">@color/middle_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:maxLength">50</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@drawable/bg_edit_text_selector</item>
    </style>
</resources>